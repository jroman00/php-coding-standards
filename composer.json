{
    "name": "jroman00/php-coding-standards",
    "type": "coding-standard",
    "description": "Additional CodeSniffer rules",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "phpcbf": "./vendor/bin/phpcbf -p Jroman00",
        "phpcs": "./vendor/bin/phpcs -p Jroman00",
        "phpunit": "./vendor/bin/phpunit --configuration phpunit.xml",
        "phpunit-coverage": "./vendor/bin/phpunit --configuration phpunit.xml --coverage-html test-reports/html"
    }
}
