{
    "name": "jroman00/php-coding-standards",
    "type": "coding-standard",
    "description": "Additional CodeSniffer rules",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "lint": "php ./vendor/bin/phpcs -p Jroman00",
        "lint-fix": "php ./vendor/bin/phpcbf -p Jroman00",
        "test": "php ./vendor/bin/phpunit --configuration phpunit.xml",
        "test-coverage": "php ./vendor/bin/phpunit --configuration phpunit.xml --coverage-html ./coverage/html"
    }
}
